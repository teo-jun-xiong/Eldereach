<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
        android:id="@+id/buttonClientSignUp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="90dp"        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/custom_dropshadow_main"
        android:text="Client" />

    <Button
        android:id="@+id/buttonVolunteerSignUp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="90dp"
        android:layout_toStartOf="@+id/buttonClientSignUp"
        android:background="@drawable/custom_dropshadow_main"
        style="?android:attr/borderlessButtonStyle"
        android:text="Volunteer" />
</RelativeLayout>