<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transportSwipeContainerVolunteer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".volunteer.transport.TransportVolunteerActivity">

    <RelativeLayout
        android:id="@+id/layout1TransportVolunteerRequestFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/buttonHelpTransportVolunteer"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:background="@drawable/custom_dropshadow_transport"
            style="?android:attr/borderlessButtonStyle"
            android:text="Help" />

        <TextView
            android:id="@+id/textHeaderTransportClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@+id/buttonHelpTransportVolunteer"
            android:text="Transport Requests"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTransportVolunteer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarStyle="outsideOverlay"
            android:layout_below="@+id/buttonHelpTransportVolunteer"
            android:scrollbars="vertical" />
    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>