<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/custom_dropshadow"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textRequestNameVolunteer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Client name"
        android:layout_toStartOf="@+id/buttonViewVolunteer"
        android:textColor="#000000" />

    <ImageButton
        android:id="@+id/buttonViewVolunteer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:background="@drawable/custom_dropshadow"
        android:src="@drawable/icon_view"/>

    <TextView
        android:id="@+id/textRequestDateVolunteer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Date of request"
        android:layout_toStartOf="@+id/buttonViewVolunteer"
        android:layout_below="@+id/textRequestNameVolunteer"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textRequestTypeVolunteer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/textRequestDateVolunteer"
        android:layout_toStartOf="@+id/buttonViewVolunteer"
        android:text="Type of request"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textStatusVolunteer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/textRequestTypeVolunteer"
        android:layout_toStartOf="@+id/buttonViewVolunteer"
        android:text="Status"
        android:textColor="#000000" />

</RelativeLayout>