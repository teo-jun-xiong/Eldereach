<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".client.HomeClientActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/buttonLogOutClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:text="Log out" />

        <TextView
            android:id="@+id/textWelcomeClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Welcome client!"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageButton
            android:id="@+id/buttonVisitClient"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_above="@+id/layoutFoodAidTransportClient"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corners"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_visit"
            android:text="Visit" />

        <RelativeLayout
            android:id="@+id/layoutFoodAidTransportClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonRequestsClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="My requests"
                android:textSize="11sp" />

            <ImageButton
                android:id="@+id/buttonTransportClient"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="25dp"
                android:background="@drawable/rounded_corners"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_transport"
                android:text="Transport" />

            <ImageButton
                android:id="@+id/buttonFoodAidClient"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:background="@drawable/rounded_corners"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_food_aid"
                android:text="Food aid" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/buttonFoodAidClient"
                android:layout_alignBottom="@+id/buttonFoodAidClient"
                android:layout_marginStart="32dp"
                android:text="Food Aid"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/buttonTransportClient"
                android:layout_alignBottom="@+id/buttonTransportClient"
                android:layout_marginStart="31dp"
                android:text="Transport"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutFoodAidTransportClient">

            <ImageButton
                android:id="@+id/buttonHotlinesClient"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_corners"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_hotline"
                android:text="Hotlines" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/buttonHotlinesClient"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-5dp"
                android:text="Hotlines"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/buttonVisitClient"
            android:layout_centerHorizontal="true"
            android:text="Visits"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>