<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/custom_dropshadow"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textFoodAidRequestNameVolunteerDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Client name"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textFoodAidRequestStatusVolunteerDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Status"
        android:layout_below="@+id/textFoodAidRequestNameVolunteerDialog"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textFoodAidRequestDateVolunteerDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Date of request"
        android:layout_below="@+id/textFoodAidRequestStatusVolunteerDialog"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textFoodAidRequestDateTimeVolunteerDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/textFoodAidRequestDateVolunteerDialog"
        android:text="Date and time of delivery"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textFoodAidRequestAddressVolunteerDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Client's address"
        android:layout_below="@+id/textFoodAidRequestDateTimeVolunteerDialog"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textFoodAidRequestTypeVolunteerDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Type of food aid"
        android:layout_below="@+id/textFoodAidRequestAddressVolunteerDialog"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textFoodAidRequestDietaryVolunteerDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Dietary restrictions"
        android:layout_below="@+id/textFoodAidRequestTypeVolunteerDialog"
        android:textColor="#000000" />
</RelativeLayout>