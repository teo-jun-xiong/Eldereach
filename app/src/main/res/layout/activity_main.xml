<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonLogInMain"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="90dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/custom_dropshadow"
        android:text="Log in" />

    <Button
        android:id="@+id/buttonSignUpMain"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="90dp"
        android:layout_toStartOf="@+id/buttonLogInMain"
        android:background="@drawable/custom_dropshadow"
        style="?android:attr/borderlessButtonStyle"
        android:text="Sign up" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@id/buttonLogInMain"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/icon_eldereach" />
</RelativeLayout>