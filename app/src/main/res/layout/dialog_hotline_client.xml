<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/custom_dropshadow_main">

        <Button
            android:id="@+id/buttonCall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_hotline_call"
            android:layout_below="@id/textDescriptionPopup"
            android:layout_alignStart="@+id/imagePopup"
            android:layout_marginTop="-5dp" />

        <ImageView
            android:id="@+id/imagePopup"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:src="@drawable/org_ada" />

        <TextView
            android:id="@+id/textDescriptionPopup"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textNamePopup"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="Description"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textHotlinePopup"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textDescriptionPopup"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Hotline"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textNamePopup"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagePopup"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Name of organisation"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold" />
</RelativeLayout>