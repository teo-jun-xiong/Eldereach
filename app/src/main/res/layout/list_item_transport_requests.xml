<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginTop="-4dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textTransportRequestStatusClient"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:background="@drawable/custom_black_borders"
        android:gravity="center"
        android:padding="5dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:scrollHorizontally="false"
        android:text="Status"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textTransportRequestDateTimeHomeClient"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginStart="-4dp"
        android:layout_toEndOf="@id/textTransportRequestStatusClient"
        android:background="@drawable/custom_black_borders"
        android:ellipsize="none"
        android:gravity="center"
        android:maxLines="3"
        android:padding="5dp"
        android:scrollHorizontally="false"
        android:text="dd MMM yy\nhh:mm"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textTransportRequestDateTimeDestClient"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginStart="-4dp"
        android:layout_toEndOf="@id/textTransportRequestDateTimeHomeClient"
        android:background="@drawable/custom_black_borders"
        android:ellipsize="none"
        android:gravity="center"
        android:maxLines="3"
        android:padding="5dp"
        android:scrollHorizontally="false"
        android:text="dd MMM yy hh:mm"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textTransportRequestLocationClient"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_marginStart="-4dp"
        android:layout_toEndOf="@id/textTransportRequestDateTimeDestClient"
        android:background="@drawable/custom_black_borders"
        android:ellipsize="none"
        android:gravity="center"
        android:maxLines="3"
        android:padding="5dp"
        android:scrollHorizontally="false"
        android:text="address"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="13sp" />
</RelativeLayout>