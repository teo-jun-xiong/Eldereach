<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/dropshadow"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imagePopup"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dropshadow"
        android:src="@drawable/ada" />

    <TextView
        android:id="@+id/textNamePopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagePopup"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="Name of organisation"
        android:textColor="#000000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textDescriptionPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textNamePopup"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="Description"
        android:textColor="#000000"
        android:textStyle="italic"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textHotlinePopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDescriptionPopup"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="Hotline"
        android:textColor="#000000"
        android:textSize="13sp" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="-10dp"
        android:layout_below="@id/textDescriptionPopup"
        android:layout_alignRight="@+id/imagePopup"/>
</RelativeLayout>